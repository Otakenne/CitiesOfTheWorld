<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CitiesOfTheWorld" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Colors -->
        <item name="default_color">@color/primary_color</item>
        <item name="default_color_secondary">@color/default_color_secondary_dark</item>
        <item name="default_text_color">@color/white</item>
        <item name="accent_color">@color/accent</item>
        <item name="separator_view_color">@color/separator_gray</item>

        <!-- Font -->
        <item name="android:fontFamily">@font/airbnbcerealbook</item>
    </style>

    <style name="CityTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?default_text_color</item>
        <item name="android:textSize">@dimen/city_text_size</item>
    </style>

    <style name="CountryTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">?default_text_color</item>
        <item name="android:textSize">@dimen/country_text_size</item>
    </style>

    <style name="LocationTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/text_color_secondary_dark</item>
        <item name="android:textSize">@dimen/location_text_size</item>
    </style>

    <style name="BasicButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/location_text_size</item>
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>